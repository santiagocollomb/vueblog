@media screen and (min-width: 768px)
  //Home view
  .blog-feed
    display flex
    -ms-flex-align start
    align-items flex-start
    -ms-flex-wrap wrap
    flex-wrap wrap
    padding 0 1.25rem;

  .post-preview
    width calc(100% / 4 - 2.5rem)
    margin 1.25rem 1rem 1.5rem
  .card-title
    font-size 1.5em

  //Post preview component
  .card-title
    font-size 2em

  //Nav
  .nav
    padding 1.75rem 1.25rem 1.25rem

  .post-content 
    position fixed
    top 0
    left calc(100% / 3 + 3.25rem)
    width calc(100% / 1.5 - 3.25rem)
    height 100%
    padding 10rem 5rem 5rem 0
    overflow-y scroll
